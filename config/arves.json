{
    "dns_enum": [
        {
            "bin": "subfinder",
            "loc": "https://github.com/projectdiscovery/subfinder",
            "args": "-d {domain} -config {config}/subfinder-config.yaml -o {output} -silent"
        },
        {
            "bin": "puredns",
            "loc": "https://github.com/d3mondev/puredns",
            "args": "bruteforce {config}/all.txt {domain} -r {config}/resolvers.txt --write {output}"
        },
        {
            "bin": "amass",
            "loc": "https://github.com/OWASP/Amass",
            "args": "enum -d {domain} -config {config}/amass.ini -o {output}",
            "phase": "dns_enum"
        }
    ],
    "dns_valid": [
        {
            "bin": "dnsx",
            "loc": "https://github.com/d3mondev/puredns",
            "args": "-l {input} -o {output} -a -resp -silent -json -r {config}/resolvers.txt"
        }
    ],
    "port_scan": [
        {
            "bin": "masscan",
            "loc": "https://github.com/robertdavidgraham/masscan",
            "args": "-iL {input} -p80,443,8080,8443,65534 --max-rate 1800 -oJ {output}"
        }
    ],
    "validation_scan": [
        {
            "bin": "nmap",
            "loc": "https://nmap.org/download.html",
            "args": "-iL {input} -p {ports} -oA {output}"
        }
    ],
    "screenshot": [
        {
            "bin": "aquatone",
            "loc": "https://github.com/michenriksen/aquatone",
            "args": "-nmap -out {output} --scan-timeout 1000",
            "stdin": "{input}"
        }
    ],
    "http_scan": [
        {
            "bin": "nuclei",
            "loc": "https://github.com/projectdiscovery/nuclei",
            "args": "-config {config}/nuclei-config.yaml -o {output}",
            "stdin": "{input}"
        },
        {
            "bin": "gau",
            "loc": "https://github.com/lc/gau",
            "args": "-b jpg,png,gif -o {output}",
            "stdin": "{input}"
        }
    ]
}